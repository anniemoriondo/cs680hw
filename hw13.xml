<?xml version="1.0"?>

<project name="hw13" basedir="." default="run">
    <property environment="env"/>
    <echo message="JUNIT: ${env.JUNIT}"/>
    <echo message="ANT_HOME: ${env.ANT_HOME}"/>

    <!-- Sources and binaries -->
    <property name="src" location="src"/>
    <property name="bin" location="bin"/>

    <!-- Unit tests -->
    <property name="test" location="test"/>
    <property name="test.src" location="test/src"/>
    <property name="test.bin" location="test/bin"/>

    <!-- Classpath -->
    <path id="classpath">
        <pathelement location="${bin}"/>
        <pathelement location="${test.bin}"/>
        <!-- JUnit libraries-->
        <fileset dir="${env.JUNIT}" includes="*junit*.jar" excludes="*vintage*.jar"/>
        <fileset dir="${env.JUNIT}" includes="*opentest4j*.jar"/>
        <fileset dir="${env.JUNIT}" includes="*apiguardian*.jar"/>
    </path>

    <!-- Start with all-new binaries -->
    <target name="init">
        <!-- Make these directories if they don't already exist-->
        <mkdir dir="${bin}/edu/umb/cs680/hw13"/>
        <mkdir dir="${test.bin}/edu/umb/cs680/hw13"/>
        <delete>
            <fileset dir="${bin}/edu/umb/cs680/hw13" includes="**/*"/>
            <fileset dir="${test.bin}/edu/umb/cs680/hw13" includes="**/*"/>
        </delete>
        <mkdir dir="${bin}"/>
        <mkdir dir="${test.bin}"/>
    </target>

    <!-- Compile -->
    <target name="compile" depends="init">
        <!-- Classes under test -->
        <javac srcdir="${src}" destdir="${bin}" includeantruntime="no">
            <classpath refid="classpath"/>
            <include name="edu/umb/cs680/hw13/observable/*.java"/>
        </javac>
        <!-- Test classes -->
        <javac srcdir="${test.src}" destdir="${test.bin}"
               includeantruntime="no">
            <classpath refid="classpath"/>
            <include name="edu/umb/cs680/hw13/observable/*Test.java"/>
        </javac>
    </target>

    <!-- Run unit tests-->
    <target name="run" depends="compile">
        <junitlauncher printsummary="True">
            <classpath refid="classpath"/>
            <testclasses outputdir="${test}">
                <fileset dir="${test.bin}">
                    <include name="edu/umb/cs680/hw13/observable/*Test.class"/>
                </fileset>
                <listener type="legacy-plain" sendsysout="true"/>
            </testclasses>
        </junitlauncher>

    </target>
</project>